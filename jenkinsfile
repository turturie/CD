node {
  try {
    stage('checkout') {
      checkout scm
    }
    stage('prepare') {
      sh "git clean -fdx"
    }
    stage('compile') {
      echo "nothing to compile for hello.sh..."
    }
    stage('test') {
      echo "nothing to test for hello.sh..."
    }
    stage('package') {
      echo "create package for hello.sh..."
    }
    stage('publish') {
      echo "uploading package..."
    }
    
    def tag = sh(returnStdout: true, script: "git tag --contains | head -1").trim()
    if (tag) {
        stage("deploy to STG") {
            echo "uploading package..."
        }
    }
  } finally {
    stage('cleanup') {
      echo "doing some cleanup..."
    }
  }
}
